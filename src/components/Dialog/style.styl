@import '../../styles/variables';

.overlay
  position: fixed
  top: 0
  left: 0
  display: flex
  width: 100vw
  height: 100vh
  align-items: center
  justify-content: center
  background: rgba(0,0,0,0.12)

.enter
  background: none;
  .dialog
    opacity: 0;
    transform: translateY(-25%)
  &_active
    background: rgba(0,0,0,0.12)
    transition: all 0.2s ease-out
    .dialog
      opacity: 1
      transform: translateY(0)
      transition: transform 0.2s ease-out
.leave
  background: rgba(0,0,0,0.12)
  .dialog
    opacity: 1
    transform: translateY(0)
  &_active
    background: none
    transition: all 0.2s ease-out
    .dialog
      opacity: 0
      transform: translateY(-25%)
      transition: all 0.2s ease-out

.dialog
  position: relative
  border-radius: 4px
  background-color: $white
  box-shadow: 0 8px 10px 1px rgba(0,0,0,0.14), 0 3px 14px 2px rgba(0,0,0,0.12), 0 5px 5px -3px rgba(0,0,0,0.4)

.title
  color: $black
  font-size: 1.5rem
  font-weight: 500
  margin: 0
.body
  padding: 2.4rem
.navigation
  text-align: right
  padding: 0.8rem
  border-top: 1px solid $breakLineColor
  button
    min-width: 5rem
    margin-left: 0.8rem
.loading
  position: absolute
  width: 100%
  height: 100%
  top: 0
  display: flex
  justify-content: center
  align-items: center
  background-color: $white
